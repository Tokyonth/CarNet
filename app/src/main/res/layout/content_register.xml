<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/user_register"
    tools:context=".activity.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp">

        <com.tokyonth.carnet.ui.widget.ClearEditText
            android:layout_width="match_parent"
            android:background="@drawable/rect_fillet_bg"
            android:drawableLeft="@drawable/ic_user_ds"
            android:singleLine="true"
            android:drawableRight="@drawable/ic_delete_selector"
            android:hint="输入用户名"
            android:inputType="none"
            android:maxLines="1"
            android:ems="10"
            android:padding="8dp"
            android:drawablePadding="8dp"
            android:id="@+id/reg_account"
            android:layout_height="wrap_content" />

        <com.tokyonth.carnet.ui.widget.ClearEditText
            android:layout_width="match_parent"
            android:background="@drawable/rect_fillet_bg"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_email_ds"
            android:singleLine="true"
            android:drawableRight="@drawable/ic_delete_selector"
            android:hint="输入邮箱"
            android:layout_below="@id/reg_account"
            android:inputType="none"
            android:maxLines="1"
            android:ems="10"
            android:padding="8dp"
            android:drawablePadding="8dp"
            android:id="@+id/reg_email"
            android:layout_height="wrap_content" />

        <com.tokyonth.carnet.ui.widget.ClearEditText
            android:layout_width="match_parent"
            android:background="@drawable/rect_fillet_bg"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_pwd_ds"
            android:singleLine="true"
            android:drawableRight="@drawable/ic_delete_selector"
            android:hint="输入密码"
            android:layout_below="@id/reg_email"
            android:inputType="none"
            android:maxLines="1"
            android:ems="10"
            android:padding="8dp"
            android:drawablePadding="8dp"
            android:id="@+id/reg_pwd"
            android:layout_height="wrap_content" />

        <com.tokyonth.carnet.ui.widget.ClearEditText
            android:layout_width="match_parent"
            android:background="@drawable/rect_fillet_bg"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/ic_pwd_confirm_ds"
            android:singleLine="true"
            android:drawableRight="@drawable/ic_delete_selector"
            android:hint="确认密码"
            android:layout_below="@id/reg_pwd"
            android:inputType="none"
            android:maxLines="1"
            android:ems="10"
            android:padding="8dp"
            android:drawablePadding="8dp"
            android:id="@+id/pwd_confirm"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pwd_confirm"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_margin="8dp"
            android:id="@+id/ll">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意用户协议"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="查看相关协议" />

        </RelativeLayout>

        <com.dx.dxloadingbutton.lib.LoadingButton
            android:id="@+id/btn_register"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            app:lb_resetAfterFailed="true"
            app:lb_btnColor="#9F9F9F"
            app:lb_btnText="注册" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>